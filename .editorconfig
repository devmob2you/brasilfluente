root = true

[*]
indent_size = 2
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.css]
indent_size = 2

[*.less]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[**.php]
indent_size = 4

[**.sql]
indent_size = 4

[**.blade.php]
indent_size = 4

[**.{php,js}]
max_line_length = 85
